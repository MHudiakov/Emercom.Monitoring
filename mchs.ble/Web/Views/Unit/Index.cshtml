@model List<Web.Models.Unit.UnitInfoModel>

@{
    ViewBag.Title = "Список объектов";
}

<div class="panel-body">
    <div class="row">
        <div class="col-lg-12">
            <table class="table table-bordered">
                <tr>
                    <th>Объект</th>
                    <th>Тип объекта</th>
                    <th>Описание/Примечание</th>
                    <th></th>
                </tr>

                @foreach (var item in Model)
                {
                    <tr class="success">
                        <td>
                            @Html.DisplayFor(modelItem => item.Unit.Name)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.Unit.Number)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.Unit.Description)
                        </td>
                        <td>
                            <a class="btn btn-default btn-sm pull-left" href="@Url.Action("UnitInfo", "Unit", new { id = item.Unit.Id })">
                                <span class="glyphicon glyphicon-search" aria-hidden="true"></span>Показать
                            </a>
                        </td>
                    </tr>
                }
            </table>
        </div>
    </div>
</div>
