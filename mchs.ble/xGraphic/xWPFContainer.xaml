<UserControl x:Class="xGraphic.xWPFContainer"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    Height="300" Width="300" DragEnter="UserControl_DragEnter">
    <Grid Name="MainGrid">
        <ScrollBar Name="sbVert" Width="18" HorizontalAlignment="Right" Margin="0, 0, 0, 18"/>
        <ScrollBar Name="cbHor" Height="18"  VerticalAlignment="Bottom" Margin="0, 0, 18, 0" Orientation="Horizontal" />
        <ContentControl Name="xContentControl" VerticalAlignment="Stretch" HorizontalAlignment="Stretch" Margin="0, 0, 18, 18"/>
    </Grid>
</UserControl>
