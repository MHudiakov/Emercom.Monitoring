@model Web.Models.FilterMovementModel

@{
    ViewBag.Title = "Движение оборудования";
}


<div class="row">
    <div class="col-sm-12">
        <div class="panel panel-default">
            <div class="panel-heading" style="padding: 10px 15px;">
                Фильтр
            </div>
            <div class="panel-body">
                @using (Ajax.BeginForm("List", "Movement", null, new AjaxOptions { UpdateTargetId = "movements", OnBegin = "spinner.start", OnSuccess = "spinner.stop", OnFailure = "onFail", InsertionMode = InsertionMode.Replace }))
                {
                    @Html.HiddenFor(x => x.UnitId)
                    <div class="col-sm-3">
                        @Html.DropDownListFor(model => model.EquipmentId, Model.EquipmentList as SelectList, "- выберите оборудование -", htmlAttributes: new { @class = "form-control" })
                        @Html.ValidationMessageFor(model => model.EquipmentId)
                    </div>

                    <div class="input-group">

                        <div class="col-sm-6">
                            <div class="row">
                                <span class="col-sm-4">Дата начала: </span>
                                <div class="col-sm-8">
                                    <input class="input-group" id="DtBegin" name="DtBegin" type="text" value="@Model.DtBegin">
                                    @*Html.TextBoxFor(model => model.DtBegin, new {@class = "input-group", id = "DtBegin"})
                                    @Html.ValidationMessageFor(model => model.DtBegin)*@
                                </div>
                            </div>
                        </div>

                        <div class="col-sm-6">
                            <div class="row">
                                <span class="col-sm-4">Дата окончания: </span>
                                <div class="col-sm-8">
                                    <input class="input-group" id="DtEnd" name="DtEnd" type="text" value="@Model.DtEnd">
                                    @*@Html.TextBoxFor(model => model.DtEnd, new {@class = "input-group", id = "DtEnd"})
                                    @Html.ValidationMessageFor(model => model.DtEnd)*@
                                </div>
                            </div>
                        </div>
                    </div>

                    <div class="col-sm-12">
                        <button type="submit" class="btn btn-default pull-left">
                            <span class="glyphicon glyphicon-search" aria-hidden="true"></span>
                            Найти
                        </button>
                    </div>
                }
            </div>
        </div>
    </div>
</div>

<div id="movements">
    @{Html.RenderAction("List", "Movement", Model);}
</div>

@section CSS
{
    <link rel="stylesheet" href="/Content/bootstrap-datetimepicker.css" />
}

@section Scripts
{
    <script type="text/javascript">
        $(function () {
            var dateTimePickerParameters = {
                widgetPositioning: {
                    horizontal: 'left',
                    vertical: 'top'
                },
                format: "DD.MM.YYYY hh:mm",
                minDate: "01.01.2000"
            };
            $('#DtBegin').datetimepicker(dateTimePickerParameters);

            $('#DtEnd').datetimepicker(dateTimePickerParameters);

        });
    </script>
}