@model Web.Models.FilterMovementModel

@{
    ViewBag.Title = "Движение оборудования";
}

@section CSS
{
    <link rel="stylesheet" href="/Content/bootstrap-datetimepicker.css" />
}

<div class="row">
    <div class="col-sm-12">
        <div class="panel panel-default">
            <div class="panel-heading" style="padding: 10px 15px;">
                Фильтр
            </div>
            <div class="panel-body">
                @using (Ajax.BeginForm("List", "Movement", null, new AjaxOptions { UpdateTargetId = "movements", OnBegin = "spinner.start", OnSuccess = "spinner.stop", OnFailure = "onFail", InsertionMode = InsertionMode.Replace }))
                {
                    @Html.HiddenFor(x => x.UnitId)
                    <div class="col-sm-3">
                        @Html.DropDownListFor(model => model.EquipmentId, Model.EquipmentList as SelectList, "- выберите оборудование -", htmlAttributes: new { @class = "form-control" })
                        @Html.ValidationMessageFor(model => model.EquipmentId)
                    </div>

                    <div class="input-group">

                        <div class="col-sm-6">
                            <div class="row">
                                <span class="col-sm-4">Дата начала: </span>
                                <div class="col-sm-8">
                                    @*    <input class="input-group datetimepicker" id="DtBegin" name="DtBegin" type="text" value="@Model.DtBegin">*@
                                    @Html.TextBoxFor(model => model.DtBegin, new { @class = "input-group datetimepicker", id = "DtBegin" })
                                    @Html.ValidationMessageFor(model => model.DtBegin)
                                </div>
                            </div>
                        </div>

                        <div class="col-sm-6">
                            <div class="row">
                                <span class="col-sm-4">Дата окончания: </span>
                                <div class="col-sm-8">
                                    @* <input class="input-group datetimepicker" id="DtEnd" name="DtEnd" type="text" value="@Model.DtEnd">*@
                                    @Html.TextBoxFor(model => model.DtEnd, new { @class = "input-group datetimepicker", id = "DtEnd" })
                                    @Html.ValidationMessageFor(model => model.DtEnd)
                                </div>
                            </div>
                        </div>
                    </div>

                    <div class="col-sm-12">
                        <button type="submit" class="btn btn-default pull-left">
                            <span class="glyphicon glyphicon-search" aria-hidden="true"></span>
                            Найти
                        </button>
                    </div>
                }
            </div>
        </div>
    </div>
</div>

<div id="movements">
    @{Html.RenderAction("List", "Movement", Model);}
</div>

@section Scripts
{
    <script src="@Url.Content("~/Scripts/controls.js")" type="text/javascript"></script>
    <script type="text/javascript" src="/scripts/moment-with-locales.js"></script>
    <script type="text/javascript" src="/scripts/bootstrap-datetimepicker.js"></script>
}