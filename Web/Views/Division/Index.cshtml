@model Web.Models.Division.FilterDivisionModel
@{
    ViewBag.Title = "Список подразделений";
}

@section CSS
{
    <link rel="stylesheet" href="~/Content/css/jquery.treegrid.css">
}

<div class="panel-body">
    @using (Ajax.BeginForm("List", "Division", null, new AjaxOptions { UpdateTargetId = "divisions", OnBegin = "spinner.start", OnSuccess = "updateTree", OnFailure = "onFail", InsertionMode = InsertionMode.Replace }))
    {
        <div class="row">
            <div class="col-lg-1">
                
                @Html.EditorFor(model => model.SearchPattern, new { @class = "form-control" } )
                @Html.ValidationMessageFor(model => model.SearchPattern)

                @*@Html.DropDownListFor(model => model.DivisionId, Model.DivisionList, "- выберите подразделение -",
                    new {@class = "form-control"})
                @Html.ValidationMessageFor(model => model.DivisionId)*@
            </div>
            
        </div>

        <div class="row">
            <div class="col-lg-1">
                <button type="submit" class="btn btn-default btn-sm pull-left" > 
                    <span class="glyphicon glyphicon-search" aria-hidden="true"></span> Найти
                    
                </button>
            </div>
        </div>
    }
</div>

<div class="panel-body" id="divisions">
    @{Html.RenderAction("List", "Division", Model);}
</div>

@section Scripts
{
    <script src="@Url.Content("~/Scripts/plugins/treegrid/jquery.treegrid.min.js")" type="text/javascript"></script>
    <script src="@Url.Content("~/Scripts/plugins/treegrid/jquery.treegrid.bootstrap3.js")" type="text/javascript"></script>
    <script src="@Url.Content("~/Scripts/Views/Division/Index.js")" type="text/javascript"></script>
}