@model Web.Models.FilterEquipmentModel

@{
    ViewBag.Title = "Оборудование";
}

<div class="row">
    <div class="col-sm-12">
        <div class="panel panel-default">
            <div class="panel-heading" style="padding: 10px 15px;">
                Фильтр
            </div>
            <div class="panel-body">
                @using (Ajax.BeginForm("List", "Equipment", null, new AjaxOptions { UpdateTargetId = "equipments", OnBegin = "spinner.start", OnSuccess = "spinner.stop", OnFailure = "onFail", InsertionMode = InsertionMode.Replace }))
                {
                    <div class="col-sm-3">
                        @Html.DropDownListFor(model => model.kEquipmentId, Model.kEquipmentList as SelectList, "- выберите оборудование -",
                                        htmlAttributes: new { @class = "form-control" })
                        @Html.ValidationMessageFor(model => model.kEquipmentId)
                    </div>

                    <div class="col-sm-8">
                        <button type="submit" class="btn btn-default pull-left">
                            <span class="glyphicon glyphicon-search" aria-hidden="true"></span>
                            Найти
                        </button>
                    </div>
                }
            </div>
        </div>
    </div>
</div>
<div class="panel-body">

</div>

<div class="panel-body" id="equipments">
    @{Html.RenderAction("List", "Equipment", Model);}
</div>