@model Web.Models.EquipmetGroup.FilterEquipmentGroupModel

@{
    ViewBag.Title = "Группы оборудования";
}

@section CSS
{
    <link rel="stylesheet" href="~/Content/css/jquery.treegrid.css">
}

<div class="row" >
    <div class="col-sm-12">
        <div class="panel panel-default">
            <div class="panel-heading" style="padding: 10px 15px;">
                Фильтр
            </div>
            <div class="panel-body">
                @using (Ajax.BeginForm("EquipmentGroupList", "EquipmentGroup", null, new AjaxOptions { UpdateTargetId = "equipmentGroups", OnBegin = "spinner.start", OnSuccess = "updateTree", OnFailure = "onFail", InsertionMode = InsertionMode.Replace }))
                {
                    <div class="col-sm-3">
                        @Html.TextBoxFor(model => model.SearchPattern, new { placeholder = "Введите название группы", style = "width:100%;" })
                        @Html.ValidationMessageFor(model => model.SearchPattern)
                    </div>
                    <div class="col-sm-8">
                        <button type="submit" class="btn btn-default pull-left">
                            <span class="glyphicon glyphicon-search" aria-hidden="true"></span>
                            Найти
                        </button>
                    </div>
                }
            </div>
        </div>
    </div>
</div>

<div id="equipmentGroups">
    @{Html.RenderAction("EquipmentGroupList", "EquipmentGroup", Model);}
</div>

@section Scripts
{
    <script src="@Url.Content("~/Scripts/plugins/treegrid/jquery.treegrid.min.js")" type="text/javascript"></script>
    <script src="@Url.Content("~/Scripts/plugins/treegrid/jquery.treegrid.bootstrap3.js")" type="text/javascript"></script>
    <script src="@Url.Content("~/Scripts/Views/EquipmentGroup/tree.js")" type="text/javascript"></script>
}