@model Web.Models.Unit.FilterUnitModel

@{
    ViewBag.Title = "Список объектов учета";
}

<div class="row">
    <div class="col-sm-12">
        <div class="panel panel-default">
            <div class="panel-heading" style="padding: 10px 15px;">
                Фильтр
            </div>
            <div class="panel-body">
                @using (Ajax.BeginForm("List", "Home", null, new AjaxOptions { UpdateTargetId = "users", OnBegin = "spinner.start", OnSuccess = "spinner.stop", OnFailure = "onFail", InsertionMode = InsertionMode.Replace }))
                {

                    <div class="col-sm-3">
                        @Html.DropDownListFor(model => model.DivisionId, Model.DivisionList, "- выберите подразделение -", new { @class = "form-control", style = "width:100%;" })
                        @Html.ValidationMessageFor(model => model.DivisionId)
                    </div>
                        <div class="col-sm-8">
                            <button type="submit" class="btn btn-default pull-left">
                                <span class="glyphicon glyphicon-search" aria-hidden="true"></span>
                                Найти
                            </button>
                        </div>
                }
            </div>

        </div>
    </div>
</div>
<div class="panel-body" id="users">
    @{Html.RenderAction("List", "Home", Model);}
</div>