@model Web.Models.FilterEquipmentModel

@{
    ViewBag.Title = "Оборудование";
}

@section CSS{
    <link href="@Url.Content("~/Scripts/plugins/forms/datepicker/datepicker.css")" rel="stylesheet" />
    <link href="@Url.Content("~/Content/spinner.css")" rel="stylesheet" />
}
@section Scripts{
    <script src="@Url.Content("~/Scripts/plugins/forms/datepicker/bootstrap-datepicker.js")" type="text/javascript"></script>
    <script src="@Url.Content("~/Scripts/plugins/forms/datepicker/locales/bootstrap-datepicker.ru.js")" type="text/javascript"></script>
    <script src="@Url.Content("~/Scripts/jquery.unobtrusive-ajax.min.js")" type="text/javascript"></script>
    <script src="@Url.Content("~/Scripts/jquery.validate.min.js")" type="text/javascript"></script>
    <script src="@Url.Content("~/Scripts/jquery.validate.unobtrusive.min.js")" type="text/javascript"></script>
    <script src="@Url.Content("~/Scripts/globalize/globalize.js")" type="text/javascript"></script>
    <script src="@Url.Content("~/Scripts/controls.js")" type="text/javascript"></script>
    <script src="@Url.Content("~/Scripts/spinner.js")" type="text/javascript"></script>
    <script type="text/javascript">
        function onFail() {
            spinner.stop();
            $("#equipments").html('<h2 align="center">Ошибка получения данных</h2>');
        }
    </script>
}

<div class="panel-body">
    @using (Ajax.BeginForm("List", "Equipment", null, new AjaxOptions { UpdateTargetId = "equipments", OnBegin = "spinner.start", OnSuccess = "spinner.stop", OnFailure = "onFail", InsertionMode = InsertionMode.Replace }))
    {
        <div class="row">
            <div class="col-lg-6">
                @Html.DropDownListFor(model => model.kEquipmentId, Model.kEquipmentList as SelectList, "- выберите оборудование -",
                                        htmlAttributes: new { @class = "form-control" })
                @Html.ValidationMessageFor(model => model.kEquipmentId)
            </div>
        </div>

        <div class="row">
            <div class="col-lg-1">
                <button type="submit" class="btn btn-default btn-sm pull-left">
                    <span class="glyphicon glyphicon-search" aria-hidden="true"></span> Найти
                </button>
            </div>
        </div>
    }
</div>

<div class="panel-body" id="equipments">
    @{Html.RenderAction("List", "Equipment", Model);}
</div>
